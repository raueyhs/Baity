#
# https://help.github.com/articles/dealing-with-line-endings/
#
# Linux start script should use lf
/gradlew        text eol=lf

# These are Windows script files and should use crlf
*.bat           text eol=crlf

# 标记macro相关文件为私有
src/main/java/com/shyeuar/baity/features/macro/** filter=remove-macro
src/main/java/com/shyeuar/baity/gui/modules/macro/** filter=remove-macro
src/main/java/com/shyeuar/baity/mixin/macro/** filter=remove-macro
src/main/resources/assets/baity/textures/macro/** filter=remove-macro
src/main/resources/assets/baity/sounds/macro/** filter=remove-macro

# 标记包含macro字样的文件为私有（过滤macro内容）
src/main/java/com/shyeuar/baity/config/Config.java filter=remove-macro
src/main/java/com/shyeuar/baity/gui/modules/ModuleManager.java filter=remove-macro

# 忽略私有开发脚本
scripts/ export-ignore